<main class="container">
	<section class="row">
		<header class="col-xs-12">
			<h1>{{title}}</h1>
		</header>
		{{#each entities as |entity| }}
		<article class="col-xs-12">
			<h2>{{entity.name}}</h2>
			<div class="row">
				{{#each entity.children as |child|}}
				<section class="col-xs-2">
					<h4><a href="{{../../path}}/{{child.type}}/{{child.id}}">{{child.name}}</a></h4>
					<ul>
						{{#each child.children as |grandchild|}}
						<li><a href="{{../../../path}}/{{child.type}}/{{child.id}}/{{grandchild.type}}/{{grandchild.id}}">{{grandchild.name}}</a></li>
						{{/each}}
					</ul>
				</section>
				{{/each}}
			</div>
		</article>
		{{/each}}

	</section>
</main>
